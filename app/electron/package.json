{
  "name": "pr1-app",
  "version": "3.0.0",
  "main": "lib/app/main.js",
  "productName": "PRâ€“1",
  "scripts": {
    "build": "npm run build:app && npm run build:client && npm run build:preload && npm run build:renderer && npm run build:static",
    "build:app": "esbuild src/main.js --bundle --external:electron --platform=node --loader:.node=copy --outdir=lib/app --target=node18",
    "build:client": "rm -rf lib/client && mkdir -p lib && cp -r node_modules/pr1/dist lib/client",
    "build:host": "./build/beta/build.sh",
    "build:preload": "esbuild src/host/preload.js src/startup/preload.js --bundle --external:electron --outdir=lib/preload",
    "build:renderer": "esbuild src/host/renderer.jsx src/startup/renderer.jsx --bundle --external:electron --external:fs/promises --external:path --external:pr1 --external:vm --format=esm --loader:.jpeg=file --loader:.ttf=file --loader:.woff=file --loader:.woff2=file --outdir=lib/renderer",
    "build:static": "mkdir -p lib/static/host lib/static/startup && cp src/host/index.html lib/static/host/index.html && cp src/startup/index.html lib/static/startup/index.html",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "start": "electron ."
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron-squirrel-startup": "^1.0.0",
    "pr1": "file:../../client",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "electron": "^20.0.0",
    "electron-packager-languages": "^0.5.0",
    "esbuild": "^0.14.48"
  }
}
