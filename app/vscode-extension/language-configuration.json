{
  "autoClosingPairs": [
    {
      "open": "{{",
      "close": "}}"
    }
  ],
  "brackets": [
    [
      "{{",
      "}}"
    ]
  ],
  "comments": {
    "lineComment": "#"
  },
  "surroundingPairs": [
    {
      "open": "{",
      "close": "}"
    }
  ],
  "onEnterRules": [
    {
      "beforeText": "^ *- *[^:]+: *$",
      "action": {
        "appendText": "  ",
        "indent": "indent"
      }
    },
    {
      "beforeText": "^ *[^:]+: *$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^ *\\| ",
      "action": {
        "indent": "none",
        "appendText": "| "
      }
    }
  ]
}
