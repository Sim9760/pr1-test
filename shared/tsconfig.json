{
  "compilerOptions": {
    "target": "es2020",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,

    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "skipLibCheck": true,
    "strict": true
  }
}
